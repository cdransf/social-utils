{
  "name": "coryd.dev-utils",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postcss:main": "postcss src/styles/main.css --map false --use postcss-import cssnano --dir public/static/styles",
    "postcss:fira": "postcss src/styles/fira.css --map false --use postcss-import cssnano --dir public/static/styles",
    "postcss:watch": "postcss src/styles/main.css --map false --use postcss-import cssnano --dir public/static/styles --watch",
    "postcss:build": "yarn postcss:main && yarn postcss:fira",
    "uglify:media": "uglifyjs --compress --mangle -- src/scripts/music.js src/scripts/reading.js > public/static/scripts/media.js",
    "uglify:webmentions": "uglifyjs --compress --mangle -- src/scripts/webmentions.js > public/static/scripts/webmentions.js",
    "uglify:highlight": "uglifyjs --compress --mangle -- src/scripts/highlight.js > public/static/scripts/highlight.js",
    "uglify:build": "yarn uglify:media && yarn uglify:webmentions && yarn uglify:highlight",
    "submodules:clone:all": "npx vercel-submodules --all",
    "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "dev": "yarn postcss:build && yarn uglify:build && next dev",
    "build": "yarn submodules:clone:all && next build && yarn postcss:build && yarn uglify:build",
    "start": "next start",
    "prepare": "husky install"
  },
  "dependencies": {
    "@extractus/feed-extractor": "^6.2.1",
    "@next/font": "13.1.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fathom-client": "^3.5.0",
    "g": "^2.0.1",
    "js-yaml": "^4.1.0",
    "next": "13.1.1",
    "prettier": "2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.0.9",
    "cssnano": "^5.1.14",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "uglify-js": "^3.17.4",
    "vercel-submodules": "^1.0.8"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
